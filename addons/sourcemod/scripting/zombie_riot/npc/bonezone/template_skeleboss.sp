	public BossBones(int client, float vecPos[3], float vecAng[3], int ally)
	{	
		BossBones npc = view_as<BossBones>(CClotBody(vecPos, vecAng, BONEZONE_MODEL_BOSS, BOSSBONES_SCALE, BOSSBONES_HP, ally));

		b_BonesBuffed[npc.index] = false;
		npc.m_bBoneZoneNaturallyBuffed = true;
		b_IsSkeleton[npc.index] = true;
		b_thisNpcIsABoss[npc.index] = true;
		npc.m_bisWalking = false;

		func_NPCDeath[npc.index] = view_as<Function>(BossBones_NPCDeath);
		func_NPCOnTakeDamage[npc.index] = view_as<Function>(BossBones_OnTakeDamage);
		func_NPCThink[npc.index] = view_as<Function>(BossBones_ClotThink);

		FormatEx(c_HeadPlaceAttachmentGibName[npc.index], sizeof(c_HeadPlaceAttachmentGibName[]), "head");
		
		int iActivity = npc.LookupActivity("ACT_BOSSBONES_RUN");
		if(iActivity > 0) npc.StartActivity(iActivity);
		
		DispatchKeyValue(npc.index, "skin", BOSSBONES_SKIN);

		npc.m_flNextMeleeAttack = 0.0;
		npc.m_iBleedType = BLEEDTYPE_SKELETON;
		npc.m_iStepNoiseType = STEPSOUND_NORMAL;	
		npc.m_iNpcStepVariation = STEPTYPE_NORMAL;
		
		//IDLE
		npc.m_flSpeed = BOSSBONES_SPEED;

		npc.StartPathing();
		
		return npc;
	}
}

